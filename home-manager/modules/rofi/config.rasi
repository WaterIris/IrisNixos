* {
    foreground: #e0def4;
    background: #191724;

    subtle: #908caa;
    surface: #1f1d2e;

    red: #eb6f92;
    red-surface: #2E202F;

    pine: #31748f;
    pine-surface: #1B202F;

    yellow: #f6c177;
    blue: #9ccfd8;
    magenta: #c4a7e7;
    rose: #ebbcba;
}


configuration {
    modes: "drun";
    font: "Mononoki Nerd Font Propo bold 16";
    fixed-num-lines: true;
    show-icons: true;
    icon-theme: "Papirus-Dark";
    sidebar-mode: false;
    scroll-method: 1;
    window-format: "{t:50} ·· {c}";
    click-to-exit: true;
    matching: "fuzzy";
    sort: true;
    sorting-method: "levenshtein";
    combi-hide-mode-prefix: false;
    display-drun: "";
}

window {
    background-color: @surface;
    text-color: @foreground;
    border: 0;
    padding: 0px;
    border-radius: 8px;
    width: 400px;
    height: 328px;
}
// Almost the same thing as window idk
mainbox {
    border: 0;
    padding: 0px;
}

inputbar {
    background-color: @surface;
    spacing: 0px;
    padding: 10px 10px 10px 10px;
    children: [prompt, textbox-prompt-colon, entry];
}

prompt {
    spacing:    0;
    border:     0;
    text-color: @pine;
}

textbox-prompt-colon {
    expand: false;
    str: " ";
    text-color: @pine;
}

entry {
    spacing:    0;
    text-color: @red;
    placeholder: "";
}

// Cant find ...
message {
    border: 0px;
    padding: 6px 30px;

    background-color: @red-surface;
    text-color: @red;
}
// After using rofi -e "string"
textbox {
    background-color: @pine-surface;
    text-color: @pine;
}
// List of items
// border-color invisible to me 
listview {
    spacing: 0px;
    fixed-height: 0px;
    border: 0px;
    border-color: @red;
    scrollbar: false;
    columns: 1;
    
}
// List entries
element {
    border: 0;
    padding: 8px 8px;
}
//
element normal.normal {
    background-color: @surface;
    text-color: @subtle;
}

element alternate.normal {
    background-color: @surface;
    text-color: @subtle;
}


element selected.normal {
    background-color: @red-surface;
    text-color:       @red;
}

